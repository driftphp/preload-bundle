{
  "name": "drift/preload-bundle",
  "description": "Preload Bundle for DriftPHP, a framework on top of Symfony and ReactPHP components",
  "homepage": "https://github.com/driftphp/preload-bundle",
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Marc Morera",
      "email": "yuhu@mmoreram.com"
    }
  ],

  "require": {
    "php": "^7.4 || ^8.0",
    "symfony/dependency-injection": "^5.0",
    "drift/http-kernel": "^0.1.15",
    "mmoreram/base-bundle": "^2.3"
  },

  "require-dev": {
    "phpunit/phpunit": "^9",
    "clue/block-react": "^1.3",
    "drift/react-functions": "0.1.*"
  },

  "autoload": {
    "psr-4": {
      "Drift\\Preload\\": "."
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  }
}
